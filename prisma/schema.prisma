// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model mpesaStatements {
    id       Int     @id @default(autoincrement())
    receipt  String
    time     String
    details  String
    status   String?
    moneyIn  String?
    moneyOut String?
    balance  String?

    @@unique([receipt])
}
